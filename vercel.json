{
  "version": 2,
  "functions": {
    "api/serverless.ts": {
      "runtime": "nodejs20.x"
    }
  },
  "builds": [
    {
      "src": "client/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "api/serverless.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/serverless.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/public/$1"
    }
  ],
  "outputDirectory": "dist/public",
  "installCommand": "npm install",
  "buildCommand": "npm run build:vercel",
  "env": {
    "NODE_ENV": "production"
  }
}